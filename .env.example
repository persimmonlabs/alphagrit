# ===========================================
# Alpha Grit Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# App URL (used for redirects, emails, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# Supabase (https://supabase.com/dashboard)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# Sanity (https://sanity.io/manage)
# ===========================================
NEXT_PUBLIC_SANITY_PROJECT_ID=your-project-id
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=your-api-token

# ===========================================
# Stripe (https://dashboard.stripe.com)
# ===========================================
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Subscription Price IDs (create in Stripe Dashboard)
STRIPE_MONTHLY_PRICE_USD=price_...
STRIPE_MONTHLY_PRICE_BRL=price_...
STRIPE_YEARLY_PRICE_USD=price_...
STRIPE_YEARLY_PRICE_BRL=price_...

# ===========================================
# E-book Generator API (for AI generation)
# ===========================================
NEXT_PUBLIC_EBOOK_GENERATOR_API=http://localhost:8000

# Optional: Analytics
NEXT_PUBLIC_GA_ID=
